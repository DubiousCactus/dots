# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"


# Set shut down, restart and locking features
bindsym $mod+0 mode "$mode_system"
set $mode_system System (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown

mode "$mode_system" {
    bindsym l exec --no-startup-id /home/transpalette/.config/i3/i3exit lock, mode "default"
    bindsym s exec --no-startup-id /home/transpalette/.config/i3/i3exit suspend, mode "default"
    bindsym u exec --no-startup-id /home/transpalette/.config/i3/i3exit switch_user, mode "default"
    bindsym e exec --no-startup-id /home/transpalette/.config/i3/i3exit logout, mode "default"
    bindsym h exec --no-startup-id /home/transpalette/.config/i3/i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id /home/transpalette/.config/i3/i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id /home/transpalette/.config/i3/i3exit shutdown, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

#Audio menu
set $audiomenu "volume:  [+]10%  [-]10%  [m]ute  [r]eset"
bindsym $mod+F12         mode $audiomenu

mode $audiomenu {
    bindsym r             exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- 100%
    bindsym plus          exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- +10%
    bindsym KP_Add        exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- +10%
    bindsym minus         exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- -10%
    bindsym KP_Subtract   exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- -10%
    bindsym m             exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
    bindsym Return        mode "default"
    bindsym Escape        mode "default"
}

