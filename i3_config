# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	font pango:Fira_Code 10
	tray_output none
	position top
	status_command ~/bumblebee-status/bumblebee-status -m nic traffic disk:root cpu memory date time weather pasink pasource -p root.path=/ time.format="%H:%M W%V" date.format="%a, %b %d" -t gruvbox-powerline
	colors {
		focused_workspace #ffffff #f4e027 #150b89
	}
}

